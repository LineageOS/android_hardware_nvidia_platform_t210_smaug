			reg = <8>;
			regulator-name = "AVDD_DSI_CSI_1V2";
			regulator-min-microvolt = <1200000>;
			regulator-max-microvolt = <1200000>;
			regulator-always-on;
			regulator-boot-on;
			vin-supply = <&max77620_ldo0>;
		};
*/
